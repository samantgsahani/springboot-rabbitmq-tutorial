pipeline {
    agent any

    tools {
        jdk 'jdk-21'         // ğŸ‘ˆ Match the name you defined in Jenkins
        maven 'maven-tool'
    }

    stages {
        stage('Hello') {
            steps {
                echo 'Hello World'
            }
        }

        stage('Maven Compile') {
            steps {
                bat 'mvn compile'
            }
        }

         stage('Maven package') {
            steps {
                bat 'mvn clean package'
            }
        }

     stage('Docker image build') {
            steps {
                bat 'docker build -t rabbitmq-image .'
            }
        }
    }
}
